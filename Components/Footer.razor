<footer class="footer">
    <div class="footer-container">
        <div class="footer-content">
            <!-- Logo -->
            <div class="footer-logo">
                <div class="logo-icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 18h6"/><path d="M10 22h4"/><path d="M12 2v2"/><path d="M7 8l-2 2"/><path d="M17 8l2 2"/><path d="M12 12a4 4 0 0 0-4-4 4 4 0 0 0-4 4c0 2.5 2 4 4 5l4 1 4-1c2-1 4-2.5 4-5a4 4 0 0 0-4-4 4 4 0 0 0-4 4z"/></svg>
                </div>
                <span class="logo-text">BFA Consulting</span>
            </div>

            <!-- Copyright -->
            <p class="copyright">
                Copyright Â© 2015 - @currentYear BFA Consulting, Tutti i diritti riservati.
            </p>

            <!-- Links -->
            <div class="footer-links">
                <a href="#home" @onclick="ScrollToHome" class="footer-link">Home</a>
                <a href="#contact" @onclick="ScrollToContact" class="footer-link">Contatti</a>
            </div>
        </div>
    </div>
</footer>

@code {
    [Inject] private IJSRuntime JSRuntime { get; set; } = default!;

    private int currentYear = DateTime.Now.Year;

    private async Task ScrollToHome()
    {
        await JSRuntime.InvokeVoidAsync("scrollInterop.scrollToElement", "#home");
    }

    private async Task ScrollToContact()
    {
        await JSRuntime.InvokeVoidAsync("scrollInterop.scrollToElement", "#contact");
    }
}
