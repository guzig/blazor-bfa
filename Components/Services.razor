@using Radzen
@using Radzen.Blazor

<section id="services" class="rz-p-4 rz-py-8" style="background:var(--bg-muted);">
<div style="text-align:center; margin-bottom:3rem;">
    <RadzenText TextStyle="TextStyle.Subtitle1" Class="section-label">I nostri servizi</RadzenText>
    <RadzenText TextStyle="TextStyle.H3" Style="font-family:'Fraunces',Georgia,serif; font-weight:600; color:var(--text-dark);">Quali servizi <span style="color:var(--primary-color);">Offriamo</span></RadzenText>
</div>

<RadzenRow Gap="24px">
        @foreach (var service in services)
        {
            <RadzenColumn Size="12" SizeMd="6" SizeLg="4">
                <ServiceCard Service="service" />
            </RadzenColumn>
        }
    </RadzenRow>
</section>

